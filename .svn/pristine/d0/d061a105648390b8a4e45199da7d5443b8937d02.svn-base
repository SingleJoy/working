  <select id="queryDiscuss" parameterType="cn.bnsr.edu_yun.frontstage.train.view.UserDiscussView" resultType="cn.bnsr.edu_yun.frontstage.train.view.UserDiscussView">
 	SELECT ud.*
	,u.username,(CASE WHEN u.is_default_img=0 THEN (SELECT path FROM cert_model_picture WHERE type= 2 AND defaulted = 0 order by upload_time desc limit 1) ELSE u.icon END) AS icon
	FROM user_discuss ud 
	LEFT JOIN USER u ON u.id=ud.user_id
	WHERE ud.course_hour_id=${course_hour_id}
	and ud.class_id=${class_id}
  	ORDER BY ud.discuss_time DESC
  </select>
  
  <select id="countClassHomeDiscuss" parameterType="cn.bnsr.edu_yun.frontstage.train.view.ClassView" resultType="java.lang.Integer">
	SELECT COUNT(ud.id) 
	FROM user_discuss ud
	LEFT JOIN user_study us ON us.source_id=ud.class_id AND us.user_id=ud.user_id
	where us.status=0 AND
	 ud.class_id=#{id,jdbcType=BIGINT} 
	<if test="open_time != null">
        AND ud.discuss_time BETWEEN #{open_time,jdbcType=TIMESTAMP} AND date_add(#{open_time,jdbcType=TIMESTAMP}, INTERVAL 1 day)
    </if>
  </select>
  
   <select id="queryClassDiscuss" parameterType="cn.bnsr.edu_yun.frontstage.train.view.UserDiscussView" resultType="cn.bnsr.edu_yun.frontstage.train.view.UserDiscussView">
	SELECT ud.id,ud.user_id,u.username,(CASE WHEN u.is_default_img=0 THEN (SELECT path FROM cert_model_picture WHERE type= 2 AND defaulted = 0 order by upload_time desc limit 1) ELSE u.icon END) AS icon,ud.discuss_content,ud.discuss_time 
	FROM user_discuss ud 
	LEFT JOIN user u on ud.user_id=u.id 
	LEFT JOIN user_study us ON us.source_id=ud.class_id AND us.user_id=ud.user_id
	WHERE us.status NOT IN (1,2) 
	AND ud.course_hour_id=#{course_hour_id,jdbcType=BIGINT}
	AND ud.class_id=#{class_id,jdbcType=BIGINT} 
