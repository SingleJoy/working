        if($("#grade"+index).val()!=-1){
            $.ajax({
                url : "${pageContext.request.contextPath}/book_cat/query_book_cat.action?bookId="+$("#grade"+index).val()+"&parentId=0&typeFlag=six",
                dataType:'json',
                success : function(json){
                    var a = JSON.stringify(json);
