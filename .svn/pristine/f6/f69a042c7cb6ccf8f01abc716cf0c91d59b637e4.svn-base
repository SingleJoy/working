<%@ page language="java" pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<!DOCTYPE html>
<html>
<head>
<jsp:include page="/backstage/base/inc.jsp"></jsp:include>
<script type="text/javascript" charset="utf-8">
	var datagrid;
	$(function() {

		datagrid = $('#datagrid').datagrid({
			url : '${pageContext.request.contextPath}/back_train/datagrid.action',
			title : '',
			iconCls : 'icon-save',
			pagination : true,
			pageSize : 10,
			pageList : [ 10, 20, 30, 40 ],
			fit : true,
			fitColumns : true,
			nowrap : false,
			border : false,
			idField : 'id',
			sortName : 'create_time',
			sortOrder : 'desc',
			checkOnSelect : true,
			selectOnCheck : true,
			frozenColumns : [ [ {
				title : '编号',
				field : 'id',
				width : 150,
				sortable : true,
				checkbox : true
			}, {
				title : '名称',
				field : 'name',
				width : 170,
				formatter:function(value,rowData,rowIndex){
					return lencut(value,15);
					/* var rows = datagrid.datagrid('getRows');
					var row = rows[rowIndex];
					return '<a href="javascript:void(0);" onclick="viewDetails('+row.id+')" >'+value+'</a>'; */
				} 
			},{
				title : '开班次数',
				field : 'classNum',
				sortable : true,
				width : 80,
			},{
				title : '所属分类',
				field : 'classify_name',
				width : 100,
			},{
				title : '是否推荐',
				field : 'is_recommend',
				width : 80,
				formatter:function(value,rowData,rowIndex){
					/* var rows = datagrid.datagrid('getRows');
					var row = rows[rowIndex]; */
					if(value=='0'){//是
						//return "是/"+row.recommendTime+"/"+row.recommendSeq;
						return "是";
					}else{
						return "否";
					}
				}
			}] ],
			columns : [ [ {
				title : '推荐序号',
				field : 'recommendSeq',
				width : 100
			}, {
				title : '推荐时间',
				field : 'recommendTime',
				width : 100,
				hidden : true
			}, {
				title : '类型',
				field : 'type',
				width : 90,
				sortable : true,
				formatter:function(v){
					if(v=="0"){
						return '专业';
					}else if(v=="1"){
						return '进阶';
					}
				}
			}, {
				title : '学员数',
				field : 'studentNum',
				sortable : true,
				width : 70,
			}, {
				title : '课程数',
				field : 'courseCount',
				width : 80
			},  {
				title : '状态',
				field : 'status',
				width : 80,
				sortable : true,
				formatter:function(v){
					if(v=="0"){
						return '未发布';
					}else if(v=="1"){
						return '已发布';
					}else if(v=="2"){
						return "已关闭";
					}else if(v=="3"){
						return "已删除";
					}
				}
			}, {
				title : '创建时间',
				field : 'create_time',
				sortable : true,
				width : 170,
				formatter:function(v){
					var dt;
					if (v instanceof Date) {
				        dt = v;
				    } else {
				        dt = new Date(v);
				    }
				 	return dt.format("yyyy-MM-dd hh:mm"); 
				}
			}, {
				title : '创建者',
				field : 'username',
				width : 100,
			},{
				title : '操作',
				field : 'statusType',
				width : 150,
				formatter:function(value, rowData, rowIndex){
					var rows = datagrid.datagrid('getRows');
					var row = rows[rowIndex];
					var htmlval = '<a href="javascript:void(0);" onclick="toTrainDetail(this,'+row.id+','+row.status+');" targrt="_blank" >查看</a>&nbsp;&nbsp;';
					if(row.status==1){//已发布
						htmlval += '<a href="javascript:void(0);" onclick="updateStatus2('+row.id+',2)" >关闭</a>&nbsp;&nbsp;';
					}
					if(row.status!=1 &&row.status!=3 ){//未发布
						htmlval += '<a href="javascript:void(0);" onclick="updateStatus1('+row.id+','+row.type+',1)" >开启</a>&nbsp;&nbsp;';
					}
					if(row.is_recommend==1){//未推荐
						htmlval += '<a href="javascript:void(0);" onclick="doRecommend('+row.id+')" >推荐</a>&nbsp';
					}else{
						htmlval += '<a href="javascript:void(0);" onclick="removeRecommend('+row.id+')" >取消推荐</a>&nbsp';
					} 
					
					return htmlval;
				}
			} ] ],
			toolbar : [ {
				text : '取消选中',
				iconCls : 'icon-undo',
				handler : function() {
					datagrid.datagrid('unselectAll');
				}
			}, '-'],
			onRowContextMenu : function(e, rowIndex, rowData) {
				e.preventDefault();
				$(this).datagrid('unselectAll');
				$(this).datagrid('selectRow', rowIndex);
				$('#menu').menu('show', {
					left : e.pageX,
					top : e.pageY
				});
			}
		});

	});
	function toTrainDetail(currentElement,value,status){
		if(status=="1"){
			window.open("${pageContext.request.contextPath}/train/to_train_detail.action?id="+value+"&sign=0");
/* 			$(currentElement).attr("href","${pageContext.request.contextPath}/train/to_train_detail.action?id="+value+"&sign=0");
 */		}else{
			alert("无法查看未发布的培训");
		}
		
	}
  
	//取消推荐课程
	function removeRecommend(value){
		$.ajax({
			url : '${pageContext.request.contextPath}/back_train/is_recommend_train.action',
			data:{
				id : value,
				is_recommend : 1
			},
			success : function(d) {
				var json = $.parseJSON(d);
				if (json.success) {
					datagrid.datagrid('reload');
				}
				parent.sy.messagerShow({
					msg : json.msg,
					title : '提示'
				});
			}
		});
	}
	
	//设置推荐课程
	function doRecommend(value) {
		var p = parent.sy.dialog({
			title : '设置推荐课程',
			href : '${pageContext.request.contextPath}/back_train/to_recommend_train.action',
			width : 420,
			height : 260,
			buttons : [ {
				text : '确定',
				handler : function() {
					var f = p.find('form');
					f.form('submit', {
						url : '${pageContext.request.contextPath}/back_train/is_recommend_train.action',
						success : function(d) {
							var json = $.parseJSON(d);
							if (json.success) {
								datagrid.datagrid('reload');
								p.dialog('close');
							}
							parent.sy.messagerShow({
								msg : json.msg,
								title : '提示'
							});
						}
					});
				}
			} ],
			onLoad : function() {
				var f = p.find('form');
				$.ajax({
					url : '${pageContext.request.contextPath}/back_train/get_max_seq.action',
					data : {
						id : value
					},
					dataType : 'json',
					success : function(d) {
						if(d.success){
							f.form('load', {
								recommendSeq : d.obj,
								id : value
							});
						}
					}
				});
			}
		});
	}
	
	
	function updateStatus1(id,type,status) {//发布
		var result = confirm('您真的要发布该培训？');
        if(result){
            $.ajax({
                url : '${pageContext.request.contextPath}/class/is_exist_class.action',
                dataType : 'json',
                data:{
                    source_id : id,
                    source_type : 1,
                    trainType : type
                },
                success:function(data){
                    if(data.num>0&&data.train_of_num>0){
                    	$.ajax({
                			url : '${pageContext.request.contextPath}/back_train/update_status.action',
                			data : {
                				id : id,
                				status : status
                			},
                			dataType : 'json',
                			success : function(d) {
                				datagrid.datagrid('load');
                				datagrid.datagrid('unselectAll');
                				parent.sy.messagerShow({
                					title : '提示',
                					msg : d.msg
                				});
                			}
                		});
                    }else{
                        if(data.num<=0){
                            alert("该培训还没有开班，请联系主办方创建班级！");
                            return ;
                        }
                        if(data.trainType==0&&data.train_of_num<=0){
                            alert("该培训一个课程都没有，请联系主办方创建课程！");
                            return ;
                        }else if(data.trainType==1&&data.train_of_num<=0){
                            alert("该培训一个阶段都没有，请联系主办方创建阶段！");
                            return ;
                        }
                    }
                }
            });
        }
		
	}
	
	function updateStatus2(id,status) {//发布
		$.ajax({
			url : '${pageContext.request.contextPath}/back_train/update_status.action',
			data : {
				id : id,
				status : status
			},
			dataType : 'json',
			success : function(d) {
				datagrid.datagrid('load');
				datagrid.datagrid('unselectAll');
				parent.sy.messagerShow({
					title : '提示',
					msg : d.msg
				});
			}
		});
	}
	
	function _search() {
		datagrid.datagrid('load', sy.serializeObject($('#searchForm')));
	}
	function cleanSearch() {
		datagrid.datagrid('load', {});
		$('#searchForm input').val('');
		$('#searchForm select').val('-1');
	} 
</script>
</head>
<body class="easyui-layout" data-options="fit:true">
	<div data-options="region:'north',border:false,title:'过滤条件'" style="height: 100px;overflow: hidden;" align="left">
		<form id="searchForm" style="width: 100%;height: 100%;">
			<table class="tableForm datagrid-toolbar" style="width: 100%;height: 100%;">
				<tr>
					<th>名称</th>
					<td>
						<input name="name" style="width:150px;" />
					</td>
				</tr>
				<tr>
					<th>培训状态</th>
					<td>
						<select name="status">
							<option value="-1">请选择</option>
							<option value="0">未发布</option>
							<option value="1">已发布</option>
						</select>
						<a href="javascript:void(0);" class="easyui-linkbutton" onclick="_search();">过滤</a>
						<a href="javascript:void(0);" class="easyui-linkbutton" onclick="cleanSearch();">清空</a>
					</td>
				</tr>
			</table>
		</form>
	</div>
	<div data-options="region:'center',border:false" style="overflow: hidden;">
		<table id="datagrid"></table>
	</div>

	<div id="menu" class="easyui-menu" style="width:120px;display: none;">
		<div onclick="append();" data-options="iconCls:'icon-add'">增加</div>
		<div onclick="remove();" data-options="iconCls:'icon-remove'">删除</div>
		<div onclick="edit();" data-options="iconCls:'icon-edit'">编辑</div>
	</div>
</body>
</html>