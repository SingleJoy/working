<%@ page language="java" pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<!DOCTYPE html>
<html>
<head>
<jsp:include page="/backstage/base/inc.jsp"></jsp:include>
<script type="text/javascript" charset="utf-8">
    var datagrid;
    $(function() {
		datagrid = $('#datagrid').datagrid({
			url : '${pageContext.request.contextPath}/back_user_appraise/datagrid.action',
			title : '',
			iconCls : 'icon-save',
			pagination : true,
			pageSize : 10,
			pageList : [ 10, 20, 30, 40 ],
			fit : true,
			fitColumns : true,
			nowrap : false,
			border : false,
			idField : 'id',
			sortName : 'appraise_time',
			sortOrder : 'desc',
			checkOnSelect : true,
			selectOnCheck : true,
			frozenColumns : [ [ {
				title : '编号',
				field : 'id',
				width : 150,
				sortable : true,
				checkbox : true
			}, {
				title : '评价内容',
				field : 'appraise_content',
				width : 300,
				sortable : true,
				formatter:function(value,rowData,rowIndex){
					var content = value.replace(/<.*?>/ig,"");
					return '<a href="${pageContext.request.contextPath}/back_user_appraise/to_user_appraise_detail.action?id='+rowData.id+'" >'+'<span title="'+content+'" style="display:inline-block;overflow: hidden;" >'+lencut(content,35)+'</span>'+'</a>'
				}
			} ] ],
			columns : [ [ {
				title : '课程名称',
				field : 'courseName',
				width : 100
			},{
				title : '评分',
				field : 'score',
				sortable : true,
				width : 50,
                formatter:function(value, rowData, rowIndex){
					return value+'分';
				}
			},
			{
				title : '作者',
				field : 'authorName',
				width : 100
			}, {
				title : '评价时间',
				field : 'appraise_time',
				width : 150,
				sortable : true
			},{
				title : '状态',
				field : 'status',
				width : 100,
                formatter:function(value, rowData, rowIndex){
                	if(rowData.status==0){
                		return '正常';
                	}else{
                		return '禁止';
                	}
					
				}
			},{
				title : '操作',
				width : 150,
				field : 'do',  
				formatter:function(value, rowData, rowIndex){
					var url = '<a href="javascript:void(0);" onclick="remove();">删除</a>&nbsp;';
					if(rowData.status=='0'){
						return url+'<a href="javascript:void(0);" onclick="doChangeStatus(\'' +1+ '\');">禁用</a>';
					}else{
						return url+'<a href="javascript:void(0);" onclick="doChangeStatus(\'' +0+ '\');">启用</a>';
					}
				}
			} ] ],
			
			onRowContextMenu : function(e, rowIndex, rowData) {
				e.preventDefault();
				$(this).datagrid('unselectAll');
				$(this).datagrid('selectRow', rowIndex);
				$('#menu').menu('show', {
					left : e.pageX,
					top : e.pageY
				});
			}
		});

	});
    
		
		function remove() {
			var rows = datagrid.datagrid('getChecked');
			var ids = [];
			var states = [];
			if (rows.length > 0) {
				parent.sy.messagerConfirm('请确认', '您要删除当前所选评论？', function(r) {
					if (r) {
						for ( var i = 0; i < rows.length; i++) {
							ids.push(rows[i].id);
							states.push('2');
						}
						$.ajax({
							url : '${pageContext.request.contextPath}/back_user_appraise/delete_user_appraise.action',
							data : {
								ids : ids.join(','),
								states : states.join(',')
							},
							dataType : 'json',
							success : function(d) {
								datagrid.datagrid('load');
								datagrid.datagrid('unselectAll');
								parent.sy.messagerShow({
									title : '提示',
									msg : d.msg
								});
							}
						});
					}
				});
			} else {
				parent.sy.messagerAlert('提示', '请勾选要删除的评论！', 'error');
			}
		}
		
		function doChangeStatus(value) {
			var rows = datagrid.datagrid('getChecked');
			var ids = [];
			var states = [];
			if (rows.length > 0) {
				parent.sy.messagerConfirm('请确认', '您要更改当前所选评论状态？', function(r) {
					if (r) {
						for ( var i = 0; i < rows.length; i++) {
							ids.push(rows[i].id);
							states.push(value);
						}
						$.ajax({
							url : '${pageContext.request.contextPath}/back_user_appraise/change_user_appraise_status.action',
							data : {
								ids : ids.join(','),
								states : states.join(',')
							},
							dataType : 'json',
							success : function(d) {
								datagrid.datagrid('load');
								datagrid.datagrid('unselectAll');
								parent.sy.messagerShow({
									title : '提示',
									msg : d.msg
								});
							}
						});
					}
				});
			} else {
				parent.sy.messagerAlert('提示', '请勾选要更改的评论！', 'error');
			}
		}
		
	function _search() {
		datagrid.datagrid('load', sy.serializeObject($('#searchForm')));
	}
	function cleanSearch() {
		datagrid.datagrid('load', {});
		$('#searchForm input').val('');
		$('#searchForm select').val('');
		
	}
</script>

</head>
<body class="easyui-layout" data-options="fit:true">
	<div data-options="region:'north',border:false,title:'过滤条件'" style="height: 160px;overflow: hidden;" align="left">
		<form id="searchForm" style="width: 100%;height: 100%;">
			<table class="tableForm datagrid-toolbar" style="width: 100%;height: 100%;">
				<tr>
					<th>评分</th>
					<td>
						<select  name="score" style="width:80px;">
						    <option value="" selected="selected">请选择</option>
						    <option value="1">1分</option>
							<option value="2">2分</option>
							<option value="3">3分</option>
							<option value="4">4分</option>
							<option value="5">5分</option>
						</select>
					</td>
					<th>课程名</th>
					<td><input name="courseName" style="width:160px;" /></td>
					<th>作者</th>
					<td><input name="authorName" style="width:150px;" /></td>
					<th>评价内容关键词</th>
					<td><input name="appraise_content" style="width:170px;" /></td>
					<td>
						<a href="javascript:void(0);" class="easyui-linkbutton" onclick="_search();">过滤</a>&nbsp;&nbsp;<a href="javascript:void(0);" class="easyui-linkbutton" onclick="cleanSearch();">清空</a>
					</td>
					
				</tr>
			</table>
		</form>
	</div>
	<div data-options="region:'center',border:false" style="overflow: hidden;">
		<table id="datagrid"></table>
	</div>

	<div id="menu" class="easyui-menu" style="width:120px;display: none;">
		<div onclick="append();" data-options="iconCls:'icon-add'">增加</div>
		<div onclick="remove();" data-options="iconCls:'icon-remove'">删除</div>
		<div onclick="edit();" data-options="iconCls:'icon-edit'">编辑</div>
	</div>
</body>
</html>