<script type="text/javascript">
//添加课程
    $(function(){
        $("#add-train-stage").click(function(){
            $(".stage-form:last").append($('.stage-form:last').clone(true));

        })
    });

//必修课程弹窗
    $(function(){
     $(".compulsory-course").click(function(){
         $("#add-course").modal();
         $(".compulsory-course-list").show();
         $(".elective-course-list").hide()
     })
 });

//选修课程弹窗
 $(function(){
     $(".elective-course").click(function(){
         $("#add-course").modal();
         $(".elective-course-list").show();
         $(".compulsory-course-list").hide();
     })
 });

//选择课程
 $(function(){
     $(".course-footer").click(function(){
         if($(this).find(".course-meta").css("display")=="none"){
             $(this).find(".course-meta").show();
         } else{
             $(this).find(".course-meta").hide();
         }
     })
 });




//阶段显示与隐藏
$(function(){
     $(".dis_hide_analysis").click(function(){
         if( $(this).parent().parent().prev() .css("display")=="none"){
             $(this).parent().parent().prev() .slideDown();
             $(this).parent().parent().prev().prev() .slideUp();
             $(this).find("i").removeClass("es-icon-keyboardarrowdown").addClass("es-icon-keyboardarrowup");
         }else{
             $(this).parent().parent().prev() .slideUp();
             $(this).parent().parent().prev().prev() .slideDown();
             $(this).find("i").removeClass("es-icon-keyboardarrowup").addClass("es-icon-keyboardarrowdown");
         }
     });
});



</script>

