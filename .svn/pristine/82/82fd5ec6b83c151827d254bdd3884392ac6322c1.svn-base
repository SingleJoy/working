<%@ page language="java" pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<!DOCTYPE html>
<html>
<head>
<jsp:include page="/backstage/base/inc.jsp"></jsp:include>
<script type="text/javascript" charset="utf-8">
    var datagrid;
    $(function() {
		datagrid = $('#datagrid').datagrid({
			url : '${pageContext.request.contextPath}/back_user_appraise/datagrid.action',
			title : '',
			iconCls : 'icon-save',
			pagination : true,
			pageSize : 10,
			pageList : [ 10, 20, 30, 40 ],
			fit : true,
			fitColumns : true,
			nowrap : false,
			border : false,
			idField : 'id',
			sortName : 'appraise_time',
			sortOrder : 'desc',
			checkOnSelect : true,
			selectOnCheck : true,
			frozenColumns : [ [ {
				title : '编号',
				field : 'id',
				width : 150,
				sortable : true,
				checkbox : true
			}, {
				title : '评价内容',
				field : 'appraise_content',
				width : 300,
				formatter:function(value,rowData,rowIndex){
					var content = value.replace(/<.*?>/ig,"");
					return '<a href="javascript:void(0);" onclick="windowOpen0('+rowData.source_id+','+rowData.source_type+','+rowData.status+');" >'+'<span title="'+content+'" style="display:inline-block;overflow: hidden;" >'+lencut(content,35)+'</span>'+'</a>'
				}
			} ] ],
			columns : [ [ {
				title : '类型',
				field : 'source_type',
				width : 70,
				formatter:function(value, rowData, rowIndex){
                	if(value!=null){
                		if(value==0){
                			return "课程";
                		}else if(value==1){
                			return "培训";
                		}else if(value==2){
                			return "班级";
                		}else if(value==3){
                			return "课例";
                		}
                	}
					
				}
			}, {
				title : '名称',
				field : 'sourceName',
				width : 140
			},{
				title : '评分',
				field : 'score',
				sortable : true,
				width : 50,
                formatter:function(value, rowData, rowIndex){
                	if(value!=null){
                		return value+'分';
                	}
					
				}
			},
			{
				title : '作者',
				field : 'authorName',
				width : 70
			}, {
				title : '评价时间',
				field : 'appraise_time',
				width : 150,
				sortable : true
			},{
				title : '状态',
				field : 'status',
				sortable : true,
				width : 50,
                formatter:function(value, rowData, rowIndex){
                	if(rowData.status==0){
                		return '正常';
                	}else{
                		return '禁止';
                	}
					
				}
			},{
				title : '操作',
				width : 150,
				field : 'do',  
				formatter:function(value, rowData, rowIndex){
					var url = '<a href="javascript:void(0);" onclick="remove();">删除</a>&nbsp;';
					if(rowData.status=='0'){
						return url+'<a href="javascript:void(0);" onclick="doChangeStatus(\'' +1+ '\');">禁用</a>';
					}else{
						return url+'<a href="javascript:void(0);" onclick="doChangeStatus(\'' +0+ '\');">启用</a>';
					}
				}
			} ] ],
			
			onRowContextMenu : function(e, rowIndex, rowData) {
				e.preventDefault();
				$(this).datagrid('unselectAll');
				$(this).datagrid('selectRow', rowIndex);
				$('#menu').menu('show', {
					left : e.pageX,
					top : e.pageY
				});
			}
		});

	});
        function windowOpen0(id,type,status){
        	if(status==0){
        		if(type==0){
            		$.ajax({
             			  url : '${pageContext.request.contextPath}/class/is_exist_class.action',
             			  dataType : 'json',
             			  async : false,
             			  data:{
             				  source_id : id,
             	   			  source_type : 0
             	   		  }, 
             	   		  success:function(data){
             	   			 if(data.num<=1){
        	   	   			 	alert("该用户的班级被禁用，请联系建课老师！");// class status=5  删除
         	   				 }else if(data.courseHour_num<=0){
         	   					alert("该课程的课时被禁用，请联系建课老师！");
         	   				 }else{
         	   					window.open("${pageContext.request.contextPath}/user_study/to_course_study.action?page=1&learnId="+id+"&sourceType=0&jumpType=0&tab=4&is_direct=0");
         	   				 }
             	   		  }
                  	});
        		}else if(type==1){//培训
            		$.ajax({
             			  url : '${pageContext.request.contextPath}/class/is_exist_class.action',
             			  dataType : 'json',
             			  async : false,
             			  data:{
             				  source_id : id,
             	   			  source_type : 1
             	   		  }, 
             	   		  success:function(data){
             	   			 if(data.num<=0){
        	   	   			 	alert("该用户的班级被禁用，请联系培训主办方！");// class status=5  删除
         	   				 }else{
         	   					window.open("${pageContext.request.contextPath}/train/to_train_detail.action?id="+id+"&jumpType=0&sign=2");
         	   				 }
             	   		  }
                  	});
        		}else if(type==3){//课例
        			window.open("${pageContext.request.contextPath}/lesson/to_lesson_commentary.action?lesson_id="+id+"&stamp=0&state=4");
        		}
        		
        		
        	}else{
        		alert("该评价已被禁用！");
        	}
        	
        }
		
		function remove() {
			var rows = datagrid.datagrid('getChecked');
			var ids = [];
			var states = [];
			if (rows.length > 0) {
				parent.sy.messagerConfirm('请确认', '您要删除当前所选评论？', function(r) {
					if (r) {
						for ( var i = 0; i < rows.length; i++) {
							ids.push(rows[i].id);
							states.push('2');
						}
						$.ajax({
							url : '${pageContext.request.contextPath}/back_user_appraise/delete_user_appraise.action',
							data : {
								ids : ids.join(','),
								states : states.join(',')
							},
							dataType : 'json',
							success : function(d) {
								datagrid.datagrid('load');
								datagrid.datagrid('unselectAll');
								parent.sy.messagerShow({
									title : '提示',
									msg : d.msg
								});
							}
						});
					}
				});
			} else {
				parent.sy.messagerAlert('提示', '请勾选要删除的评论！', 'error');
			}
		}
		
		function doChangeStatus(value) {
			var rows = datagrid.datagrid('getChecked');
			var ids = [];
			var states = [];
			if (rows.length > 0) {
				parent.sy.messagerConfirm('请确认', '您要更改当前所选评论状态？', function(r) {
					if (r) {
						for ( var i = 0; i < rows.length; i++) {
							ids.push(rows[i].id);
							states.push(value);
						}
						$.ajax({
							url : '${pageContext.request.contextPath}/back_user_appraise/change_user_appraise_status.action',
							data : {
								ids : ids.join(','),
								states : states.join(',')
							},
							dataType : 'json',
							success : function(d) {
								datagrid.datagrid('load');
								datagrid.datagrid('unselectAll');
								parent.sy.messagerShow({
									title : '提示',
									msg : d.msg
								});
							}
						});
					}
				});
			} else {
				parent.sy.messagerAlert('提示', '请勾选要更改的评论！', 'error');
			}
		}
		
	function _search() {
		datagrid.datagrid('load', sy.serializeObject($('#searchForm')));
	}
	function cleanSearch() {
		datagrid.datagrid('load', {});
		$('#searchForm input').val('');
		$('#searchForm select').val('');
		
	}
</script>

</head>
<body class="easyui-layout" data-options="fit:true">
	<div data-options="region:'north',border:false,title:'过滤条件'" style="height: 160px;overflow: hidden;" align="left">
		<form id="searchForm" style="width: 100%;height: 100%;">
			<table class="tableForm datagrid-toolbar" style="width: 100%;height: 100%;">
				<tr>
					<td>
					评分：<select  name="score" style="width:80px;">
						    <option value="" selected="selected">请选择</option>
						    <option value="1">1分</option>
							<option value="2">2分</option>
							<option value="3">3分</option>
							<option value="4">4分</option>
							<option value="5">5分</option>
						</select></td>
					<td>
					评价时间：
						<input name="timeStart" class="easyui-datebox" data-options="editable:false" style="width: 155px;" />&nbsp;&nbsp;至&nbsp;&nbsp;
						<input name="timeEnd" class="easyui-datebox" data-options="editable:false" style="width: 155px;" />
					</td>
				</tr>
				<tr>
					<td>
						类型：<select  name="source_type" style="width:80px;">
						    <option value="" selected="selected">请选择</option>
						    <option value="0">课程</option>
							<option value="1">培训</option>
							<!-- <option value="2">班级</option> -->
							<option value="3">课例</option>
						</select>
					</td>
					<td>名&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;称：<input name="sourceName" style="width:155px;" />&nbsp;作者：<input name="authorName" style="width:150px;" /></td>
				</tr>
				<tr>
				    <td>
						状态：<select  name="status" style="width:80px;">
						    <option value="" selected="selected">请选择</option>
						    <option value="0">正常</option>
							<option value="1">禁止</option>
						</select>
					</td>
					<td>评价内容：<input name="appraise_content" style="width:317px;" />
						<a href="javascript:void(0);" class="easyui-linkbutton" onclick="_search();">过滤</a>&nbsp;&nbsp;<a href="javascript:void(0);" class="easyui-linkbutton" onclick="cleanSearch();">清空</a>
					</td>
					
				</tr>  
			</table>
		</form>
	</div>
	<div data-options="region:'center',border:false" style="overflow: hidden;">
		<table id="datagrid"></table>
	</div>

	<div id="menu" class="easyui-menu" style="width:120px;display: none;">
		<div onclick="append();" data-options="iconCls:'icon-add'">增加</div>
		<div onclick="remove();" data-options="iconCls:'icon-remove'">删除</div>
		<div onclick="edit();" data-options="iconCls:'icon-edit'">编辑</div>
	</div>
</body>
</html>