<script type="text/javascript" charset="utf-8">
	var datagrid;
	$(function() {
		datagrid = $('#datagrid').datagrid({
			url : '${pageContext.request.contextPath}/back_syslog/datagrid.action',
			title : '日志列表',
			iconCls : 'icon-save',
			pagination : true,
			pagePosition : 'bottom',
			pageSize : 10,
			pageList : [ 10, 20, 30, 40 ],
			fit : true,
			fitColumns : true,
			nowrap : false,
			border : false,
			idField : 'id',
			sortName : 'create_time',
			sortOrder : 'desc',
			frozenColumns : [ [ {
				title : '编号',
				field : 'id',
				width : 150,
				sortable : true,
				checkbox : true
			}, {
				title : '用户名称',
				field : 'user_name',
				width : 150,
				sortable : true
			} ] ],
			columns : [ [ {
				title : '日志来源',
				field : 'do_from',
				sortable : true,
				width : 150,
				formatter : function(value) {
					 if(value=='1'){
						 return "web前台日志"; 							
					 }else if(value=='2'){
						 return "web后台日志";
					 }else if(value=='3'){
						 return "Android系统日志";
					 }else if(value=='4'){
						 return "IOS系统日志";
					 }else{
						 return "错误来源日志";
					 }
				}
			},{
				title : '操作URL',
				field : 'do_url',
				sortable : true,
				width : 150
			},{
				title : '远程IP',
				field : 'remote_ip',
				sortable : true,
				width : 150
			},{
				title : '日志内容',
				field : 'msg',
				sortable : true,
				width : 150
			},{
				title : '浏览器类型',
				field : 'browser',
				sortable : true,
				width : 150
			},{
				title : '操作系统类型',
				field : 'sys_name',
				sortable : true,
				width : 150
			},{
				title : '创建时间',
				field : 'create_time',
				sortable : true,
				width : 150
			}] ],
			toolbar : [ {
				text : '删除',
				iconCls : 'icon-remove',
				handler : function() {
					remove();
				}
			}, '-', {
				text : '取消选中',
				iconCls : 'icon-undo',
				handler : function() {
					datagrid.datagrid('unselectAll');
				}
			}, '-' ],
			onRowContextMenu : function(e, rowIndex, rowData) {
				e.preventDefault();
				$(this).datagrid('unselectAll');
				$(this).datagrid('selectRow', rowIndex);
				$('#menu').menu('show', {
					left : e.pageX,
					top : e.pageY
				});
			}
		});
	});
	function _search() {
		datagrid.datagrid('load', sy.serializeObject($('#searchForm')));
	}
	function cleanSearch() {
		datagrid.datagrid('load', {});
		$('#searchForm input').val('');
		$('#do_from').val('');
	}
