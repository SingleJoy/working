    <script type="text/javascript">
        $(function(){
            $(".open_class_classify_list>ul>li").click(function(){
                $(this).addClass("curr").siblings().removeClass("curr");
                var index=$(this).index();
                if(index!=0){
                    $(".open_class_classify_list").css("height","100px");
                    $(".page_list_tabs").hide().eq(index).show();
                }else{
                    $(".page_list_tabs").hide();
                    $(".open_class_classify_list").css("height","50px");
                }
            })
        });

        $(function(){
            $(".classify_list_page>ul>li>a").click(function(){
                $(this).addClass("curr").parents("li").siblings().find("a").removeClass("curr");
            })
        });

        $(function(){
            $(".sort_content>ul>li").click(function(){
                $(this).addClass("curr").find("a").addClass("curr").parents("li").siblings().removeClass("curr").find("a").removeClass("curr");

            })
        });
        $(function(){
            var classify_list_page=document.getElementsByClassName("classify_list_page");
            for(var i=0;i<classify_list_page.length;i++){
                    classify_list_page[i].style.marginLeft=-100*i+"px";
            }

        });
    </script>






